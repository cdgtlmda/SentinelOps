# SentinelOps Environment Configuration
# Copy this file to .env and fill in the actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-pro-002

# BigQuery Configuration
BIGQUERY_DATASET=security_logs
BIGQUERY_TABLE_PREFIX=sentinel_

# Chronicle Configuration (if available)
CHRONICLE_API_KEY=your-chronicle-api-key
CHRONICLE_CUSTOMER_ID=your-customer-id

# Cloud Storage Configuration
GCS_BUCKET_NAME=sentinelops-data
GCS_LOGS_PREFIX=logs/

# Pub/Sub Configuration
PUBSUB_TOPIC_INCIDENTS=sentinelops-incidents
PUBSUB_TOPIC_ALERTS=sentinelops-alerts
PUBSUB_SUBSCRIPTION_PREFIX=sentinelops-sub-

# Communication Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-incidents
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=sentinelops@yourdomain.com
EMAIL_FROM_PASSWORD=your-app-password

# Application Configuration
APP_ENV=development
APP_PORT=8000
APP_HOST=127.0.0.1
LOG_LEVEL=INFO
DEBUG_MODE=true

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
API_KEY_SALT=your-api-key-salt
ENCRYPTION_KEY=your-32-byte-encryption-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Agent Configuration
AGENT_DETECTION_INTERVAL=30
AGENT_ANALYSIS_TIMEOUT=300
AGENT_REMEDIATION_DRY_RUN=true
AGENT_ORCHESTRATOR_MAX_RETRIES=3

# Demo Configuration (for hackathon)
DEMO_MODE=false
DEMO_INCIDENT_FREQUENCY=300
DEMO_AUTO_REMEDIATE=false

# Google Cloud Project
GCP_PROJECT_ID=your-gcp-project-id
